<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://cdn.ckeditor.com/ckeditor5/35.0.1/classic/ckeditor.js"></script>

    <title>Document</title>
</head>
<body>
    <h1>Let's bake!</h1>
        
    <section>
        <h3>Saved Recipes</h3>
        <ul>
            <% for(let i=0; i < info.length; i++) {%>
                <li>
                    
                    <span><%= info[i].recipeName %></span>
                    <span class = 'fa fa-chevron-circle-down'></span>                    
                    <span class="fa fa-trash-alt"></span>
                </li>
            <% } %>
        </ul>
    </section>

<!-------------Recipe List Section--------------->
    <h3>Recipe Details</h3>
    <section class = 'recipeSection'></section> 



<!-- ----------------------------------------------- -->

<div id="popupContainer">
    <div id="popupSubmitRecipe">
        
            <img id="close" src="/img/x-icon.jpg" onclick ="div_hide()"><span>
                <form action="/addRecipe" method="POST" id="recipeForm">
                    
                    <input type="text" placeholder="Recipe Name" name="recipeName" id="recipeNameField">
                        <div id="ingredientsContainer">
                            <select name="numberOfIngredients" id="numOfIngredients">
                                <option value="">--Select Number of Ingredients--</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                                <option value="11">11</option>
                                <option value="12">12</option>
                                <option value="13">13</option>
                                <option value="14">14</option>
                                <option value="15">15</option>
                            </select>
                        </div>
                    
                            <div class="ingredientSection row">
        
                                <div class="column">
                                    <div id="iInput" class="col1"></div>
                                </div>
        
                                <div class="column">
                                    <div id="amtInput" class="col2"></div>
                                </div>
        
                                <div class="column">
                                    <div id="measurement" class="col3"></div>
                                </div>
        
                            </div>
                            <textarea type="text" placeholder="Add your recipe instructions here" name="instructions" id="instructions"></textarea>
                    <button id="submitForm" type="submit">Save Recipe</button>
                </form>




           
    </div>
</div>
<button id="popup" onclick="divShowAdd()">Add New Recipe</button>


<!-- --------------------Delete Recipe Popup--------------------------->

<div id="popupContainerDelete">

    <div id="deletePopup">
            <h3>Delete this recipe?</h3>
            <button id="deleteButton">Delete</button>
            <button id="cancelDeleteButton" onclick ="div_hide()">Cancel</button>
    </div>

    </div> 

<!-- --------------------Measurement Converter--------------------------->
<section id="measurementConvertSection">
    <h2>Measurement Conversion</h2>
    <select name="ingredientToConvert" id="ingredientToConvert">
        <option value="">--Select Ingredient To Convert--</option>
        <option value="allPurposeFlour">All Purpose Flour</option>
        <option value="cakeFlour">Cake Flour</option>
    </select>

    <select name="convertFromUnit" id="convertFromUnit">
        <option value="">Convert From</option>
        <option value="cups">Cups</option>
        <option value="grams">Grams</option>
    </select>

    <select name="convertToUnit" id="convertToUnit">
        <option value="">Convert To</option>
        <option value="cups">Cups</option>
        <option value="grams">Grams</option>
    </select>

    <input type="number" placeholder="Amount" id="amountToConvert">

    <span id="convertedUnitDisplay"></span>

    <button id="convertUnitsButton">CONVERT</button>
</section>







<script src="js/main.js"></script>

<!-----CK Editor script replacing the textarea in the ingredients form------>
<script>
    ClassicEditor
            .create( document.querySelector( '#instructions' ) )
            .then( editor => {
                    console.log( editor );
            } )
            .catch( error => {
                    console.error( error );
            } );
</script>

</body>
</html>